<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prismXamarin.Views.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="カメラを使うサンプルアプリ" HorizontalTextAlignment="Center" TextColor="White"/>
        </Frame>
        <Button Text="写真撮影" Command="{Binding ButtonPicture}"/>
        <Image HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Source="{Binding ImagePicture}" Margin="20"/>
    </StackLayout>
</ContentPage>
