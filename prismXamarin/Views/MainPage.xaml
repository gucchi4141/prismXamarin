<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prismXamarin.Views.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White"/>
        </Frame>
        <Label Text="{Binding LabelButton}" HorizontalTextAlignment="Center"/>
        <Button Text="Push Here" Command="{Binding ButtonLabel}"/>

        <Label Text="My Content Pageに送るメッセージは、以下に入力します" HorizontalTextAlignment="Center"/>
        <Entry Text="{Binding Msg}"/>
        <Button Text="My Content Pageを表示" Command="{Binding ButtonMyContentPage}"/>
    </StackLayout>
</ContentPage>
