<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prismXamarin.Views.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White"/>
        </Frame>
        <Entry Text="{Binding Message}" Placeholder="何か入力してください" Margin="10"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Save" HorizontalOptions="FillAndExpand" Command="{Binding ButtonSave}"/>
            <Button Text="Load" HorizontalOptions="FillAndExpand" Command="{Binding ButtonLoad}"/>
            <Button Text="Delete" HorizontalOptions="FillAndExpand" Command="{Binding ButtonDelete}"/>
        </StackLayout>
        <Label Text="{Binding Result}" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>
